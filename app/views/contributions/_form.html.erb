<div class="col-sm-9">
  <%= render 'layouts/errors', :object => @contribution %>
<h1><%= @tale.title %></h1>
    <%= form_for [@tale, @contribution] do |f| %>
    <%= f.hidden_field :account_id, :value => current_account.id %>
    <%= f.hidden_field :image,  :value => thing = "spooks/#{random_pic}", class: 'form-control' %>
    <div class="col-sm-6">
      <%= image_tag thing, class: "big-pic" %>
    </div>
    <div class="col-sm-6">
      <%= f.label "Add a sentance to the tale to go with this image" %>
      <%= f.text_area :text, class: 'form-control' %>
      <%= f.submit  class: 'btn btn-danger'%>
    </div>
      <% end %>
</div>
